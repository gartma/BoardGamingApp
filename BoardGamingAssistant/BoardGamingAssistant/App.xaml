    xmlns:local="using:BoardGamingAssistant">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="RunnerAgenda_SliderTrackDecreasePressedBackgroundThemeBrush" Color="#FFFF0000" />
            <SolidColorBrush x:Key="CorpAgenda_SliderTrackDecreasePressedBackgroundThemeBrush" Color="#FF0068FF" />
            <SolidColorBrush x:Key="Credit_SliderTrackDecreasePressedBackgroundThemeBrush" Color="#FF1FE200" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
